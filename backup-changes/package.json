{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend code of chores app",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/app.ts",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "build": "tsc --project tsconfig.build.json && tsc-alias && prisma generate",
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx}'",
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "dev:seed": "npm run seed && npm run dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:docker": "docker compose -f ../docker/docker-compose.dev.yml exec backend npx prisma migrate dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
